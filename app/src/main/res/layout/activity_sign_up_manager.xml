<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/signUpXml"
        android:theme="@style/AppTheme3.NoActionBar"
        tools:context=".activities.SignUpManagerActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@color/Green_Emerald"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:title="">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/titleLogo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Toolbar.TitleText"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titleLogo" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/busGroupIdLayout"
            style="@style/myHintStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/starting_margin"
            android:gravity="center"
            android:hint="@string/enter_group_id"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/busGroupIdET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="@color/Green_Emerald"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/busGroupNameLayout"
            style="@style/myHintStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/starting_margin"
            android:gravity="center"
            android:hint="@string/enter_group_name"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/busGroupIdLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/busGroupNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="@color/Green_Emerald"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            style="@style/myHintStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginEnd="@dimen/starting_margin"
            android:gravity="center"
            android:hint="@string/enter_email"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/busGroupNameLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColor="@color/Green_Emerald"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            style="@style/myHintStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginEnd="@dimen/starting_margin"
            android:gravity="center"
            android:hint="@string/enter_password"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/emailLayout"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/Color_GreenYellow"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordLayout"
            style="@style/myHintStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginEnd="@dimen/starting_margin"
            android:gravity="center"
            android:hint="@string/confirmPassword"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/passwordLayout"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPasswordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/Green_Emerald"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:backgroundTint="@color/Color_White"
            android:textColor="@color/Green_Emerald"
            android:layout_height="wrap_content"
            android:text="@string/update_password"
            android:visibility="gone"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginEnd="@dimen/starting_margin"
            android:textAllCaps="false"
            android:id="@+id/updatePassword"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordLayout" />

        <Button
            android:layout_width="match_parent"
            android:backgroundTint="@color/Color_White"
            android:textColor="@color/Color_GreenYellow"
            android:layout_height="wrap_content"
            android:text="@string/verify_password"
            android:visibility="gone"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginEnd="@dimen/starting_margin"
            android:textAllCaps="false"
            android:id="@+id/verifyPassword"
            app:layout_constraintTop_toBottomOf="@id/updatePassword" />

        <Button
            android:layout_width="match_parent"
            android:backgroundTint="@color/Color_White"
            android:textColor="@color/Green_Emerald"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:visibility="gone"
            android:layout_marginStart="@dimen/starting_margin"
            android:layout_marginEnd="@dimen/starting_margin"
            android:textAllCaps="false"
            android:id="@+id/submitUpdatePassword"
            app:layout_constraintTop_toBottomOf="@id/verifyPassword" />




        <Button
            android:id="@+id/signUpBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Green_Emerald"
            android:elevation="8dp"
            android:layout_marginTop="15dp"
            android:text="@string/sign_up"
            android:textColor="@color/Color_White"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordLayout"
            android:onClick="signUpBtnClick"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
