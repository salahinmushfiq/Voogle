<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CheckerActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="@color/Green_Emerald"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:fontFamily="Roboto"
                android:text="Voogle"
                android:textColor="@color/Color_White"
                android:textSize="35sp" />

            <Button
                android:id="@+id/signOutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:text="Sign out"
                android:layout_marginLeft="200dp"
                android:elevation="10dp"
                android:onClick="signOutBtnOnClick"
                />


        </androidx.appcompat.widget.Toolbar>
        <Spinner
            android:id="@+id/busLicensePlatesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:spinnerMode="dropdown"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/busSeatET"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="100dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/seatUpdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            app:layout_constraintTop_toBottomOf="@+id/busSeatET"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:onClick="seatUpdateBtnOnClick"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
